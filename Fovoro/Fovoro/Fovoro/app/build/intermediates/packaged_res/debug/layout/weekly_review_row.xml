<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="125dp">


            <ImageView
                android:id="@+id/recyclerimg"
                android:layout_width="93dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"

                app:layout_constraintEnd_toStartOf="@+id/titleView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/uploadimg" />

            <TextView
                android:id="@+id/likecount"
                android:layout_width="65dp"
                android:layout_height="25dp"
                android:gravity="right"
                android:text="150"
                android:textAlignment="gravity"
                app:layout_constraintEnd_toEndOf="@+id/recyclerimg"
                app:layout_constraintTop_toBottomOf="@+id/recyclerimg" />

            <TextView
                android:id="@+id/titleView"
                android:layout_width="280dp"
                android:layout_height="19dp"
                android:text="Title"
                app:layout_constraintBottom_toTopOf="@+id/descriptionView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/recyclerimg"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/descriptionView"
                android:layout_width="280dp"
                android:layout_height="107dp"
                android:text="Description"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/recyclerimg"
                app:layout_constraintTop_toBottomOf="@+id/titleView" />

            <ImageButton
                android:id="@+id/likebutton"
                android:layout_width="27dp"
                android:layout_height="25dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/likecount"
                app:layout_constraintTop_toBottomOf="@+id/recyclerimg"
                app:srcCompat="@drawable/ic_like" />


        </androidx.constraintlayout.widget.ConstraintLayout><![CDATA[" />

            ]]>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>